# PostgreSQL connection string
DATABASE_URL=postgresql://erp_user:erp_pass@localhost:5432/erp_forecast

# Individual Postgres credentials (used by docker-compose)
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=erp_pass
POSTGRES_DB=erp_forecast

# Directory where trained models are persisted
MODELS_DIR=./models

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Application metadata
APP_VERSION=1.0.0
